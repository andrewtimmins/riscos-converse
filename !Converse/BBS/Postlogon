{
    cls

    doing `Welcome...`
    script `<Converse$Dir>.BBS.Welcome`
    anykey

    if %{registered} == 1 then
        doing `Registration reminder...`
        script  `<Converse$Dir>.BBS.Register`
    end if

    oscli `Filer_Run <Converse$Dir>.BBS.Utils.!Today`
    sleep 500
    doing `Today in history...`
    type `<Converse$Dir>.BBS.Today`

    cls
    doing `Login scan...`
    loginscan
    anykey

    doing `Seeing who's online...`
    call arcbbsdoor 126 `<Converse$Dir>.BBS.Doors.ARCbbs.!Snoop -door 126`
    fgbg 7 0
    cls

    script `<Converse$Dir>.BBS.MainMenu`

}
