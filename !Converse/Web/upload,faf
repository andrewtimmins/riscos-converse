    <script>
        /* Show success message if ?success=1 in URL */
        if (window.location.search.indexOf('success=1') !== -1) {
            document.getElementById('success').style.display = 'block';
        }
        
        /* Fetch areas when filebase selection changes */
        var filebaseSelect = document.getElementById('filebase');
        var areaSelect = document.getElementById('area');
        
        if (filebaseSelect && areaSelect) {
            filebaseSelect.addEventListener('change', function() {
                var filebaseId = this.value;
                
                /* Clear current options */
                areaSelect.innerHTML = '<option value="0">-- Loading... --</option>';
                
                if (!filebaseId || filebaseId === '0') {
                    areaSelect.innerHTML = '<option value="0">-- Select a filebase first --</option>';
                    return;
                }
                
                /* Fetch areas from API */
                fetch('/api/areas?filebase=' + filebaseId)
                    .then(function(response) {
                        return response.json();
                    })
                    .then(function(areas) {
                        areaSelect.innerHTML = '<option value="0">-- None (uncategorized) --</option>';
                        areas.forEach(function(area) {
                            var option = document.createElement('option');
                            option.value = area.id;
                            option.textContent = area.name;
                            areaSelect.appendChild(option);
                        });
                    })
                    .catch(function(err) {
                        console.error('Failed to fetch areas:', err);
                        areaSelect.innerHTML = '<option value="0">-- Error loading areas --</option>';
                    });
            });
            
            /* Trigger initial load if filebase is pre-selected */
            if (filebaseSelect.value && filebaseSelect.value !== '0') {
                filebaseSelect.dispatchEvent(new Event('change'));
            }
        }
    </script>
