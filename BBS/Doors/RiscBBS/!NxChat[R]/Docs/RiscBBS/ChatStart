{
   report `Chatting with sysop`
   attr 0 7
}

 [ irq_sysop ]

{
   if ANSI
      runtask `<RiscBBS$Dir>.SubTasks.!NxChat[R].!Run -door HANDLE ANSI`
      wait
      attr 4 7
      send `Oi sysop, press F1!!!`
      cll
      eoln
      attr 0 7
   else
      send `Awfully sorry, you need ANSI for split-screen chat`
      eoln
   endif
   eof
}
