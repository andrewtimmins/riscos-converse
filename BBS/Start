{
    /* Main Menu */
    label main_menu
    cls
    fgbg 7 0
    doing `Main Menu`
    type `<Converse$Dir>.BBS.ANSI.Header`
    type `<Converse$Dir>.BBS.Menus.MainMenu`

    print `\r\nEnter choice (1-5): `
    prompt choice char echo

    if choice == `1` goto ansi_artwork
    if choice == `2` goto connection_status
    if choice == `3` goto demo_message
    if choice == `4` goto launch_news
    if choice == '5' goto launch_arcbbstest
    if choice == `6` goto launch_snake

    if choice == `A` goto launch_cookie
    if choice == `B` goto launch_purity
    if choice == `C` goto launch_breakout
    if choice == `D` goto launch_tetris
    if choice == `E` goto launch_spraywall
    if choice == `W` goto whos_online

    if choice == `S` goto chat_sysop
    if choice == `X` goto end_session

    print `\r\nUnknown selection '%{choice}', please try again.\r\n`
    goto main_menu

    label ansi_artwork
    doing `ANSI Artwork`
    cls
    fgbg 7 0
    type `<Converse$Dir>.BBS.Art.Demo`
    anykey temp
    goto main_menu

    label connection_status
    doing `Connection status`
    print `\r\n[Live Status]\r\n`
    print `Current line: %{line}\r\n`
    print `  Time now  : %{time}\r\n`
    print `  Date today: %{date}\r\n`
    call lineinfo
    anykey temp
    goto main_menu

    label demo_message
    doing `Demo message`
    fgbg 2 0
    print `\r\nHello world. This is a demo message.\r\n`
    fgbg 7 0
    anykey temp
    goto main_menu

    label whos_online
    doing `Viewing online users`
    cls
    fgbg 3 6
    print `\r\n                      Online Users                    \r\n`
    fgbg 7 0
    online
    anykey temp
    goto main_menu

    label launch_snake
    doing `Playing Snake...`
    call arcbbsdoor 4 `<Converse$Dir>.BBS.Doors.!SnakeDoor %{line}`
    anykey temp
    goto main_menu

    label launch_arcbbstest
    doing ` ARCbbs Test Door...`
    call arcbbsdoor 1 `<Converse$Dir>.BBS.Doors.!TestDoor %{line}`
    anykey temp
    goto main_menu

    label launch_news
    doing `Reading News...`
    call door `<Converse$Dir>.BBS.Doors.!News %{t_handle}`
    anykey temp
    goto main_menu

    label launch_cookie
    doing `Playing Cookie...`
    call door `<Converse$Dir>.BBS.Doors.!Cookie -server %{t_handle} -door`
    anykey temp
    goto main_menu

    label launch_purity
    doing `Playing Purity...`
    call door `<Converse$Dir>.BBS.Doors.!Purity %{t_handle}`
    goto main_menu

    label launch_breakout
    doing `Playing Breakout...`
    call door `<Converse$Dir>.BBS.Doors.!Breakout %{t_handle}`
    goto main_menu

    label launch_tetris
    doing `Playing Tetris...`
    call door `<Converse$Dir>.BBS.Doors.!Tetris %{t_handle}`
    goto main_menu

    label launch_spraywall
    doing `Playing Spraywall...`
    call door `<Converse$Dir>.BBS.Doors.!Wall %{t_handle}`
    goto main_menu

    label chat_sysop
    doing `Chatting with Sysop...`
    call door `<Converse$Dir>.BBS.Doors.!NxChat[R] -door %{t_handle} ANSI`
    goto main_menu

    label end_session
    logoff
    return
}
