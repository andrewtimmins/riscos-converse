/* ******************************************************************************************************************************************************** */
/* FTN Mailer - Main Header                                                                                                                                 */
/* ******************************************************************************************************************************************************** */

#ifndef MAILER_H
#define MAILER_H

#include <time.h>
#include "C:Desk.Wimp.h"

/* ******************************************************************************************************************************************************** */
/* Constants                                                                                                                                                */
/* ******************************************************************************************************************************************************** */

#define MAILER_VERSION              "0.01"
#define MAILER_NAME                 "Converse"
#define MAILER_TASK_NAME            "Mailer"

/* BinkP default port */
#define BINKP_DEFAULT_PORT          24554

/* Maximum simultaneous sessions */
#define MAILER_MAX_SESSIONS         4

/* Buffer sizes */
#define MAILER_BUFFER_SIZE          32768
#define MAILER_PATH_SIZE            256
#define MAILER_ADDR_SIZE            64

/* Poll intervals (centiseconds) */
#define MAILER_POLL_INTERVAL        100     /* 1 second Wimp poll */

/* ******************************************************************************************************************************************************** */
/* FTN Address Structure                                                                                                                                    */
/* ******************************************************************************************************************************************************** */

typedef struct
{
    int zone;
    int net;
    int node;
    int point;
    char domain[32];
} FTN_ADDR;

/* ******************************************************************************************************************************************************** */
/* Session State                                                                                                                                            */
/* ******************************************************************************************************************************************************** */

typedef enum
{
    SESSION_STATE_IDLE = 0,
    SESSION_STATE_CONNECTING,
    SESSION_STATE_WAIT_NUL,
    SESSION_STATE_WAIT_ADR,
    SESSION_STATE_WAIT_PWD,
    SESSION_STATE_WAIT_OK,
    SESSION_STATE_AUTHENTICATED,
    SESSION_STATE_TRANSFER,
    SESSION_STATE_WAIT_EOB,
    SESSION_STATE_CLOSING,
    SESSION_STATE_ERROR
} SESSION_STATE;

/* Session direction */
typedef enum
{
    SESSION_DIR_INBOUND = 0,
    SESSION_DIR_OUTBOUND
} SESSION_DIRECTION;

/* ******************************************************************************************************************************************************** */
/* File Transfer State                                                                                                                                      */
/* ******************************************************************************************************************************************************** */

typedef enum
{
    TRANSFER_STATE_IDLE = 0,
    TRANSFER_STATE_SENDING,
    TRANSFER_STATE_RECEIVING,
    TRANSFER_STATE_COMPLETE
} TRANSFER_STATE;

typedef struct
{
    TRANSFER_STATE state;
    char filename[MAILER_PATH_SIZE];
    char local_path[MAILER_PATH_SIZE];
    long size;
    long offset;
    time_t mtime;
    FILE *file;
    void *queue_node;               /* Pointer to QUEUE_NODE owning this file */
} FILE_TRANSFER;

/* ******************************************************************************************************************************************************** */
/* Session Structure                                                                                                                                        */
/* ******************************************************************************************************************************************************** */

typedef struct
{
    int active;
    int socket;
    SESSION_STATE state;
    SESSION_DIRECTION direction;

    /* Remote node info */
    FTN_ADDR remote_addr;           /* Address reported by remote in M_ADR */
    FTN_ADDR target_addr;           /* For outbound: address we're calling (for password lookup) */
    int target_is_uplink;           /* 1 if target is a configured uplink (routes zone mail) */
    char remote_sysop[64];
    char remote_system[64];
    char remote_location[64];
    char remote_hostname[64];

    /* Authentication */
    int authenticated;
    char password[32];
    int cram_enabled;
    char cram_challenge[64];

    /* Timing */
    time_t connect_time;
    time_t last_activity;
    long timeout;

    /* Buffers */
    unsigned char rx_buffer[MAILER_BUFFER_SIZE];
    int rx_length;
    unsigned char tx_buffer[MAILER_BUFFER_SIZE];
    int tx_length;
    int tx_offset;

    /* File transfer */
    FILE_TRANSFER send_file;
    FILE_TRANSFER recv_file;
    int files_sent;
    int files_received;
    long bytes_sent;
    long bytes_received;

    /* End of batch flags */
    int local_eob;
    int remote_eob;

    /* BinkP 1.1 mode flags */
    int nr_mode;                    /* NR mode: 1=we want, 2=they want, 3=both */
    int nd_mode;                    /* ND mode: 1=we want, 2=they want, 3=both */
    int nda_mode;                   /* NDA (asymmetric ND) supported */
    int buggy_nr;                   /* Remote has buggy NR implementation */
    int remote_major;               /* Remote BinkP major version */
    int remote_minor;               /* Remote BinkP minor version */
    int batch_number;               /* Current batch number for session restart */

    /* ND mode received files tracking (to prevent duplicates) */
    char nd_received_files[32][MAILER_PATH_SIZE];  /* Track received filenames */
    int nd_received_count;

    /* NR mode sent files queue - files sent but waiting for M_GOT */
    FILE_TRANSFER sent_files[16];   /* Queue of sent files awaiting M_GOT */
    int sent_files_count;           /* Number of files in sent queue */

    /* Compression support */
    int z_can_send;                 /* Compression types we can send (bitmask) */
    int z_can_recv;                 /* Compression types we can receive (bitmask) */
    int z_send_type;                /* Current outbound compression type */
    int z_recv_type;                /* Current inbound compression type */
    unsigned char z_send_buf[4096]; /* Compression output buffer */
    int z_send_len;                 /* Bytes in compression buffer */
    unsigned char z_recv_buf[4096]; /* Decompression input buffer */
    int z_recv_len;                 /* Bytes in decompression buffer */

    /* Encryption support */
    int crypt_flag;                 /* Encryption state flags */
    unsigned long crypt_keys_in[3]; /* Decryption keys */
    unsigned long crypt_keys_out[3];/* Encryption keys */

    /* EXTCMD mode */
    int extcmd;                     /* Remote supports extended commands */

    /* TRF info (pending mail/files) */
    long trf_mail_bytes;            /* Pending mail bytes to send */
    long trf_file_bytes;            /* Pending file bytes to send */
} MAILER_SESSION;

/* ******************************************************************************************************************************************************** */
/* Wimp State                                                                                                                                               */
/* ******************************************************************************************************************************************************** */

typedef struct
{
    Desk_task_handle task_handle;
    Desk_icon_handle iconbar_icon;
    Desk_menu_ptr iconbar_menu_handle;
    Desk_window_handle main_window;
    Desk_bool quit;
} WIMP_STATE;

/* ******************************************************************************************************************************************************** */
/* Global State                                                                                                                                             */
/* ******************************************************************************************************************************************************** */

typedef struct
{
    /* Configuration */
    int listen_port;
    int max_sessions;
    char inbound_path[MAILER_PATH_SIZE];
    char outbound_path[MAILER_PATH_SIZE];
    char netmail_path[MAILER_PATH_SIZE];
    char freq_path[MAILER_PATH_SIZE];           /* FREQ files directory */
    char freq_exec[MAILER_PATH_SIZE];           /* External FREQ processor */

    /* Our addresses */
    FTN_ADDR our_addrs[8];
    int our_addr_count;

    /* System info */
    char sysop[64];
    char system_name[64];
    char location[64];
    int speed;
    char flags[64];

    /* Listener */
    int listen_socket;
    int listener_active;

    /* Sessions */
    MAILER_SESSION sessions[MAILER_MAX_SESSIONS];
    int active_sessions;
    int connect_timeout;                 /* seconds */
    int session_timeout;                 /* seconds */
    int scan_interval;                   /* seconds - rescan outbound directories */
    int toss_interval;                   /* seconds - auto-toss inbound (0=disabled) */
    int poll_interval;                   /* seconds - auto-poll uplinks (0=disabled) */
    int retry_delay;                     /* seconds */
    int polling_in_progress;             /* re-entry guard for poll loop */

    /* Automatic scheduling timestamps */
    time_t last_auto_toss;
    time_t last_auto_poll;
    time_t startup_delay_until;          /* Don't poll until after this time */

    /* Statistics */
    int total_sessions;
    int total_files_sent;
    int total_files_received;
    long total_bytes_sent;
    long total_bytes_received;
    time_t start_time;
} MAILER_STATE;

/* ******************************************************************************************************************************************************** */
/* Global Variables (extern)                                                                                                                                */
/* ******************************************************************************************************************************************************** */

extern WIMP_STATE wimp;
extern MAILER_STATE mailer;

/* ******************************************************************************************************************************************************** */
/* Function Prototypes - Mailer Core                                                                                                                        */
/* ******************************************************************************************************************************************************** */

/* Initialisation */
void mailer_initialise(void);
void mailer_finalise(void);
void mailer_load_config(void);

/* Listener */
int mailer_create_listener(void);
void mailer_destroy_listener(void);
void mailer_accept_connection(void);

/* Session management */
MAILER_SESSION *mailer_allocate_session(void);
void mailer_free_session(MAILER_SESSION *session);
void mailer_close_session(MAILER_SESSION *session, const char *reason);
void mailer_process_sessions(void);
void mailer_check_timeouts(void);
int mailer_is_aka_busy(const FTN_ADDR *addr, MAILER_SESSION *exclude);

/* Outbound connections */
int mailer_connect_to_node(const FTN_ADDR *addr, const char *hostname, int port, int is_uplink);
void mailer_poll_outbound(void);
void mailer_poll_all_uplinks(void);
int mailer_poll_next_ready_node(void);

/* Statistics */
void mailer_update_stats(MAILER_SESSION *session);

/* ******************************************************************************************************************************************************** */
/* Function Prototypes - UI                                                                                                                                 */
/* ******************************************************************************************************************************************************** */

void mailer_update_status_window(void);
void mailer_log(const char *format, ...);

/* FTN Status window - multi-network display */
int ftnstatus_initialise(void);
void ftnstatus_finalise(void);
void ftnstatus_open_window(void);
void ftnstatus_close_window(void);
void ftnstatus_set_activity(int network_id, int is_outbound, const char *activity);
void ftnstatus_set_activity_percent(int network_id, int is_outbound, const char *activity, int percent);
void ftnstatus_set_session_direction(int is_outbound);
void ftnstatus_clear_network(int network_id);
void ftnstatus_clear_all(void);
void ftnstatus_update_timers(void);
int ftnstatus_find_network_by_zone(int zone);

/* Legacy transfer progress display (deprecated - calls new functions internally) */
void ftnstatus_start_transfer(int is_sending, const char *filename);
void ftnstatus_start_transfer_ex(int is_sending, const char *filename, long total_size);
void ftnstatus_update_progress(int percent);
void ftnstatus_update_progress_ex(long bytes_done, long total_size);
void ftnstatus_update_connection(const char *system_name, const FTN_ADDR *addr);
void ftnstatus_end_transfer(void);

/* ******************************************************************************************************************************************************** */
/* Utility Functions                                                                                                                                        */
/* ******************************************************************************************************************************************************** */

/* Address formatting */
void ftn_addr_to_string(const FTN_ADDR *addr, char *buffer, size_t size);
int ftn_string_to_addr(const char *str, FTN_ADDR *addr);
int ftn_addr_match(const FTN_ADDR *a, const FTN_ADDR *b);

#endif
