/* FTN Status window - static header icons (from template) */
#define FTNSTATUS_HEADER_NUM        0   /* "#" label */
#define FTNSTATUS_HEADER_NETWORK    1   /* "Network" label */
#define FTNSTATUS_HEADER_ACTIVITY   2   /* "Activity" label */
#define FTNSTATUS_HEADER_TIME       3   /* "Time" label */

/* FTN Status window - dynamic icon layout (matches Server pattern) */
#define FTNSTATUS_ICON_BASE         4   /* First dynamic icon number */
#define FTNSTATUS_ICONS_PER_ROW     4   /* # | Network | Activity | Time */
#define FTNSTATUS_ICON_HEIGHT       60  /* Row height in OS units */
#define FTNSTATUS_HEADER_HEIGHT     52  /* Header row height */
#define FTNSTATUS_TOP_STATIC_ROWS   1   /* Header row count */
#define FTNSTATUS_PADDING           16  /* Gap below header */
#define FTNSTATUS_BOTTOM_PADDING    12   /* Gap at bottom of window */

/* FTN Status window - column layout (like Server) */
#define FTNSTATUS_COLUMN_START      0   /* Left margin */
#define FTNSTATUS_COLUMN_GAP        8   /* Gap between columns */
#define FTNSTATUS_NUM_WIDTH         76  /* # column width */
#define FTNSTATUS_NETWORK_WIDTH     452 /* Network column width */
#define FTNSTATUS_ACTIVITY_WIDTH    888 /* Activity column width */
#define FTNSTATUS_TIME_WIDTH        176 /* Time column width */

