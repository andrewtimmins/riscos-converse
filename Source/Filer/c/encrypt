/* ******************************************************************************************************************************************************** */
/* Filer Module                                                                                                                                       */
/* ******************************************************************************************************************************************************** */

#include <time.h>
#include <stdlib.h>

#include "encrypt.h"

static unsigned char key[KEY_SIZE] = ENCRYPTION_KEY;

/* ******************************************************************************************************************************************************** */
/* Encryption Routines                                                                                                                                      */
/* ******************************************************************************************************************************************************** */

void encrypt_decrypt(char *data, int size)
{
    for (int i = 0; i < size; i++) {
        data[i] ^= key[i % KEY_SIZE];
    }
}

