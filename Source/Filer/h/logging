#ifndef LOGGING_H
#define LOGGING_H

#define SYSTEMLOG "<Converse$Dir>.Logs.System"
#define CALLLOG "<Converse$Dir>.Logs.Calls"
#define LINELOG "<Converse$Dir>.Logs.Line_"
#define FTNLOG "<Converse$Dir>.Logs.FTN"
#define WEBLOG "<Converse$Dir>.Logs.Web"

#define LOGGING_MAX_LINES 32

#include "structs.h"

void logging_initialise(void);
