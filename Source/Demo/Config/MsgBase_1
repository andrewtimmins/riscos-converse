;
; Fidonet Messagebase Configuration
;

messagebase 2
    name            FTN Networks
    type            1
    accesslevel     0
    keys            

    ; Netmail area - no groups means it routes everywhere
    area 1
        name        Netmail
        tag         NETMAIL
        areatype    2
        daystokeep  0
    endarea

    ; Example FTN echo areas with group filtering
    ; Only uplinks whose groups match will receive these echoes
    
    area 2
        name        BBS Discussion
        tag         BBS_DISCUSSION
        areatype    1
        daystokeep  90
        groups      A
    endarea

    area 3
        name        Retro Computing
        tag         RETRO_COMPUTING
        areatype    1
        daystokeep  90
        groups      B,C
    endarea

    area 4
        name        RISC OS
        tag         RISCOS
        areatype    1
        daystokeep  90
        groups      C
    endarea

endmessagebase
