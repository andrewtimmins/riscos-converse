/* ******************************************************************************************************************************************************** */
/* Server                                                                                                                                     */
/* ******************************************************************************************************************************************************** */

#include <stdio.h>
#include <stdlib.h>
#include <stdarg.h>
#include <string.h>
#include <time.h>

#include "oslib/os.h"

/* ******************************************************************************************************************************************************** */
/* Timer Routines                                                                                                                                           */
/* ******************************************************************************************************************************************************** */

os_t timer_monotonic_time(void) {
  return (os_read_monotonic_time());
}

os_t timer_set(os_t delay) {
  return(timer_monotonic_time() + delay);
}

os_t timer_action(os_t timer) {
  return ((timer_monotonic_time() - timer) >= 0L);
}
