/* ******************************************************************************************************************************************************** */
/* Server - Timer Header                                                                                                                                    */
/* ******************************************************************************************************************************************************** */

#ifndef SERVER_TIMER_H
#define SERVER_TIMER_H

#include "oslib/os.h"

/* Timer functions - returns monotonic time in centiseconds */
os_t timer_monotonic_time(void);

/* Set a timer to fire after 'delay' centiseconds, returns timer handle */
os_t timer_set(os_t delay);

/* Check if timer has expired (returns non-zero if expired) */
os_t timer_action(os_t timer);

#endif
